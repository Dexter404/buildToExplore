{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "build",

    // for sequelize-typescript lib annotations
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // for JSON configs in config dir
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/config/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}